<%= render 'layouts/navbar'%>


<div class="col-md-3">
                
            
 <div class=list-group>

 
  <% @posts.each do |post| %>

<div class=list-group-item>
    <td><%= post.title %></td>
    <td><%= post.text %></td>
	<td><%= post.comments.count %> comments</td>
  <td><%= link_to 'Show', post_path(post) %></td>
  <td><%= link_to 'Edit', edit_post_path(post) %></td>
  <td><%= link_to 'Destroy', post_path(post),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
</div>
      

  <% end %>
 </div>
 </div>

<div class="col-md-9">

                <div class="row">
<% @posts.each do |post| %>
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                            <%=  if (post.images[0].present? && post.images[0].image.present?) 
							image_tag(post.images[0].image_url(:mini))
						else
							image_tag("/uploads/image/image/29/mini_cute.jpeg")
						end
							
							%>
                            <div class="caption">
                                <h4 class="pull-right">$24.99</h4>
                                <h4><a href="#"><%= post.title %></a>
                                </h4>
                                <p><%= post.text %></p>
                            </div>
                            <div class="ratings">
                                <p class="pull-right"><%= post.comments.count %> comments</p>
                                <p>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                </p>
                            </div>
                        </div>
                    </div>
<% end %>
            </div>
